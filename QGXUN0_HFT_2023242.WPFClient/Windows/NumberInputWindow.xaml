<Window x:Class="QGXUN0_HFT_2023242.WPFClient.Windows.NumberInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QGXUN0_HFT_2023242.WPFClient.Windows"
        mc:Ignorable="d"
        Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock x:Name="desc" Style="{StaticResource TextBlockEntityDesctiptionStyle}"/>
            <TextBox x:Name="value" Style="{StaticResource TextBoxUpdateEntityStyle}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1">
            <Button Style="{StaticResource ButtonCancelStyle}" Click="CancelButtonClick"/>
            <Button Style="{StaticResource ButtonConfirmStyle}" Click="ConfirmButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
